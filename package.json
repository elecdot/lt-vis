{
  "name": "lt-vis",
  "private": true,
  "version": "0.0.0",
  "description": "Linear & Tree Data Structure Visualizer (LT-Vis) monorepo scaffolding",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm --filter @ltvis/web dev",
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm typecheck",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter @ltvis/web test",
    "coverage": "echo \"stub: coverage\"",
    "test:viz": "pnpm --filter @ltvis/web test",
    "test:core": "pnpm --filter @ltvis/model-ts test",
    "test:ui": "pnpm --filter @ltvis/web test",
    "test:nl": "pnpm --filter @ltvis/web test -- --grep nl",
    "test:persistence": "pnpm --filter @ltvis/web test -- --grep persistence",
    "test:dsl": "pnpm --filter @ltvis/web test -- --grep dsl",
    "test:avl": "pnpm --filter @ltvis/model-ts test -- --grep AVL",
    "docs:dev": "echo \"stub: docs:dev\"",
    "docs:build": "echo \"stub: docs:build\"",
    "perf": "echo \"stub: perf\""
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  }
}
